---
import BaseLayout from "./BaseLayout.astro";

const {
  title,
  description,
  summary,
  rainfall,
  legality,
  incentives,
  structuredData,
} = Astro.props;
---
<BaseLayout title={title} description={description} structuredData={structuredData}>
  <div class="grid gap-12 lg:grid-cols-[2fr,1fr]">
    <section class="space-y-6">
      <header>
        <p class="text-sm font-semibold uppercase tracking-wide text-primary-600">State directory</p>
        <h1 class="mt-2 text-3xl font-semibold text-slate-900">{title}</h1>
        {summary && <p class="mt-3 text-base text-slate-600">{summary}</p>}
      </header>
      <slot />
    </section>
    <aside class="space-y-5 rounded-3xl border border-primary-100 bg-primary-50/70 p-6">
      <h2 class="text-lg font-semibold text-primary-700">Rainfall &amp; policy snapshot</h2>
      <dl class="space-y-4 text-sm text-slate-700">
        {typeof rainfall === "number" && (
          <div>
            <dt class="font-semibold text-slate-800">Average annual rainfall</dt>
            <dd>{rainfall} inches</dd>
          </div>
        )}
        {legality && (
          <div>
            <dt class="font-semibold text-slate-800">Legality</dt>
            <dd>{legality}</dd>
          </div>
        )}
        {incentives && (
          <div>
            <dt class="font-semibold text-slate-800">Incentives</dt>
            <dd>{incentives}</dd>
          </div>
        )}
      </dl>
    </aside>
  </div>
</BaseLayout>
