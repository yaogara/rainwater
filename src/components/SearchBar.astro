---
import { withBase } from "../utils/paths";
const { entries = [] } = Astro.props;
---
<div class="relative mx-auto w-full max-w-2xl" data-search>
  <label class="sr-only" for="search">Search for a city or state</label>
  <input
    id="search"
    type="search"
    placeholder="Search by city or stateâ€¦"
    class="w-full rounded-full border border-slate-200 bg-white px-5 py-3 text-base shadow-sm outline-none transition focus:border-primary-400 focus:ring-2 focus:ring-primary-200 text-slate-900 placeholder:text-slate-500"
  />
  <ul
    data-results
    class="absolute left-0 right-0 top-14 z-10 hidden max-h-72 overflow-auto rounded-2xl border border-slate-200 bg-white shadow-lg"
  ></ul>
  <script
    type="application/json"
    data-search-entries
    set:html={JSON.stringify(entries)}
  ></script>
  <script type="module" src={withBase('/scripts/search.js')}></script>
</div>
