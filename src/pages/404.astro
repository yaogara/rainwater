---
import BaseLayout from "../layouts/BaseLayout.astro";
import { withBase } from "../utils/paths";
---
<BaseLayout title="Page Not Found | Rainwater Directory" description="The page you are looking for does not exist.">
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <h1 class="text-6xl font-bold text-primary-600">404</h1>
    <p class="mt-4 text-xl font-semibold text-slate-900">Page not found</p>
    <p class="mt-2 text-slate-600">Sorry, we couldn't find the page you're looking for.</p>
    <a
      href={withBase("/")}
      class="mt-8 inline-flex items-center justify-center rounded-full bg-primary-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-primary-700"
    >
      Go back home
    </a>
  </div>
</BaseLayout>
